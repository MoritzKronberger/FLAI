FROM adminer:4.8.1 

ARG ADMINER_DEFAULT_DB_DRIVER
ARG ADMINER_DEFAULT_SERVER
ARG ADMINER_DEFAULT_USER
ARG ADMINER_DEFAULT_DB_NAME
ARG ADMINER_DESIGN

ENV ADMINER_DEFAULT_DB_DRIVER $ADMINER_DEFAULT_DB_DRIVER
ENV ADMINER_DEFAULT_SERVER    $ADMINER_DEFAULT_SERVER
ENV ADMINER_DEFAULT_USER      $ADMINER_DEFAULT_USER
ENV ADMINER_DEFAULT_DB_NAME   $ADMINER_DEFAULT_DB_NAME
ENV ADMINER_DESIGN            $ADMINER_DESIGN

# from https://gitlab.multimedia.hs-augsburg.de/kowa/wk_account_postgres_01
# slightly modified to use docker env variables
COPY ./login-servers.php /var/www/html/plugins-enabled/login-servers.php