{
  "name": "express",
  "version": "0.0.1",
  "contributors": [
    "Lea Jell, Martin Kohnle, Moritz Kronberger"
  ],
  "description": "Express server for REST-API",
  "keywords": [
    "Express",
    "REST",
    "API",
    "JSON"
  ],
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon -r dotenv/config src/server.js",
    "prod": "node -r dotenv/config src/server.js",
    "lint": "eslint \"src/**/*.js\"",
    "lint-fix": "eslint \"src/**/*.js\" --fix",
    "prettier-fix": "prettier --write \"src/**/*.js\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "prettier": "^2.4.1"
  },
  "devDependencies": {
    "eslint": "^8.2.0",
    "husky": "^4.3.8",
    "joi": "^17.5.0",
    "lint-staged": "^12.0.2",
    "nodemon": "^2.0.14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint \"src/**/*.js\" --fix",
      "eslint \"src/**/*.js\""
    ]
  }
}
