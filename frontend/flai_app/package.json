{
  "name": "flai_app",
  "version": "0.0.1",
  "contributors": [
    "Anja Krendlinger, Eva Kunzmann, Kieu Pham, Lea Jell, Martin Kohnle, Moritz Kronberger, Stefanie Jany"
  ],
  "description": "Vue.js Frontend Application using Typescript and Vite",
  "keywords": [
    "Vue",
    "Typescript",
    "Vite"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "test": "jest",
    "clear-jest": "jest --clearCache"
  },
  "dependencies": {
    "vue": "^3.2.16"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vue/test-utils": "^2.0.0-rc.16",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.3",
    "vite": "^2.6.4",
    "vue-tsc": "^0.3.0",
    "vue3-jest": "^27.0.0-alpha.1"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": ["js", "json", "vue", "ts"],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.(ts|tsx|js)$": "ts-jest",
      "^.+\\.vue$": "vue3-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.json"
      }
    }
  }
}
